# Production Environment Configuration for VibeSync
# Copy this file to .env.production and update with your production values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Production PostgreSQL database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://production_user:secure_password@your-db-host.com:5432/vibesync_prod

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Secret - MUST be changed to a strong, random value
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# JWT Expiration (in seconds or time string)
JWT_EXPIRES_IN=7d

# Refresh Token Expiration
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# API CONFIGURATION
# ============================================
# Production backend URL (your deployed API)
EXPO_PUBLIC_BACKEND_URL=https://api.vibesync.app

# Rork API Base URL (if using Rork services)
EXPO_PUBLIC_RORK_API_BASE_URL=https://api.vibesync.app

# API Version
API_VERSION=v1

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
# Redis URL for caching and session management
REDIS_URL=redis://your-redis-host.com:6379

# Redis Password (if required)
REDIS_PASSWORD=your_redis_password

# ============================================
# MEDIA STORAGE
# ============================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vibesync-media-prod

# Cloudinary Configuration (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CDN URL for serving media
CDN_URL=https://cdn.vibesync.app

# ============================================
# EMAIL SERVICE
# ============================================
# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@vibesync.app
SENDGRID_FROM_NAME=VibeSync

# AWS SES Configuration (Alternative)
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@vibesync.app

# ============================================
# PUSH NOTIFICATIONS
# ============================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# Apple Push Notification Service
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apple_team_id
APNS_BUNDLE_ID=com.vibesync.app
APNS_PRODUCTION=true

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://vibesync.app/auth/google/callback

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple Sign In (Optional)
APPLE_CLIENT_ID=com.vibesync.app
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Sentry for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# LogRocket
LOGROCKET_APP_ID=your_logrocket_app_id

# ============================================
# RATE LIMITING
# ============================================
# Rate limit configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated)
CORS_ORIGINS=https://vibesync.app,https://www.vibesync.app

# ============================================
# LIVE STREAMING
# ============================================
# Agora.io Configuration (for live streaming)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# Twilio Video (Alternative)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# ============================================
# PAYMENT PROCESSING (Future)
# ============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_LIVE_STREAMING=true
ENABLE_VOICE_POSTS=true
ENABLE_CREATIVE_STUDIO=true
ENABLE_ADS=true
ENABLE_GAMIFICATION=true

# ============================================
# CONTENT MODERATION
# ============================================
# AWS Rekognition for image moderation
AWS_REKOGNITION_REGION=us-east-1

# Perspective API for text moderation
PERSPECTIVE_API_KEY=your_perspective_api_key

# ============================================
# GEOLOCATION
# ============================================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# SEARCH
# ============================================
# Algolia for search (Optional)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_INDEX_NAME=vibesync_users

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# PERFORMANCE
# ============================================
# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache TTL (in seconds)
CACHE_TTL=3600

# ============================================
# LEGAL & COMPLIANCE
# ============================================
PRIVACY_POLICY_URL=https://vibesync.app/privacy
TERMS_OF_SERVICE_URL=https://vibesync.app/terms
SUPPORT_EMAIL=support@vibesync.app
LEGAL_EMAIL=legal@vibesync.app

# ============================================
# DEPLOYMENT
# ============================================
NODE_ENV=production
PORT=3000

# Health check endpoint
HEALTH_CHECK_PATH=/health

# ============================================
# NOTES
# ============================================
# 1. NEVER commit this file with real credentials to version control
# 2. Use a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.) in production
# 3. Rotate secrets regularly
# 4. Use different credentials for staging and production
# 5. Enable 2FA on all service accounts
# 6. Monitor for credential leaks using tools like GitGuardian
# 7. Set up alerts for suspicious API usage
